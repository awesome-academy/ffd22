<%= form_for(comment, remote: true) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.text_area :content, rows: 2, class: "form-control" %>

  <div class="row">
    <div class="starrating risingstar d-flex justify-content-center
      flex-row-reverse">
      <%= f.radio_button :rating, 5, id: "rating_edit_5_id_#{comment.id}" %>
      <%= f.label :rating, t(".comment_label_html"),
        for: "rating_edit_5_id_#{comment.id}" %>
      <%= f.radio_button :rating, 4, id: "rating_edit_4_id_#{comment.id}" %>
      <%= f.label :rating, t(".comment_label_html"),
        for: "rating_edit_4_id_#{comment.id}" %>
      <%= f.radio_button :rating, 3, id: "rating_edit_3_id_#{comment.id}" %>
      <%= f.label :rating, t(".comment_label_html"),
        for: "rating_edit_3_id_#{comment.id}" %>
      <%= f.radio_button :rating, 2, id: "rating_edit_2_id_#{comment.id}" %>
      <%= f.label :rating, t(".comment_label_html"),
        for: "rating_edit_2_id_#{comment.id}" %>
      <%= f.radio_button :rating, 1, id: "rating_edit_1_id_#{comment.id}" %>
      <%= f.label :rating, t(".comment_label_html"),
        for: "rating_edit_1_id_#{comment.id}" %>
    </div>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :product_id, value: comment.product_id %>

  <%= f.submit t(".save_changes"), class: "btn btn-sm btn-primary" %>
<% end %>
