<% provide(:title, t(".change_your_password")) %>

<div class="col-md-4 mx-auto">
  <h2><%= t ".change_your_password" %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
    html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field form-group">
      <%= f.label :password, t(".new_password") %>
      <% if @minimum_password_length %>
        <em>
          (<%= @minimum_password_length %> <%= t ".characters_minimum" %>)
        </em>
      <% end %>
      <%= f.password_field :password, autofocus: true,
        autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, t(".confirm_new_password") %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "form-control"%>
    </div>

    <div class="actions form-group">
      <%= f.submit t(".change_my_password"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
